<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etxtWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter website URL"
        android:text="https://www.madrid.es/portal/site/munimadrid"
        android:inputType="textPersonName"
         />

    <Button
        android:backgroundTintMode="@color/purple_200"
        android:textSize="10pt"
        android:onClick="openWebsite"
        android:textStyle="bold"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google website" />

    <EditText
        android:id="@+id/etxt_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter phone number" />

    <Button
        android:backgroundTintMode="@color/purple_200"
        android:textSize="10pt"
        android:textStyle="bold"
        android:id="@+id/button2"
        android:onClick="openDialPad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Open Dialpad" />

    <EditText
        android:id="@+id/etxt_localizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:inputType="textPersonName"
        android:hint="enter any location" />

    <Button
        android:backgroundTintMode="@color/purple_200"
        android:onClick="openMap"
        android:textSize="10pt"
        android:textStyle="bold"
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open goole map" />

    <EditText
        android:id="@+id/etxt_Share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="enter any text to share" />

    <Button

        android:textSize="10pt"
        android:textStyle="bold"
        android:backgroundTintMode="@color/purple_200"
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:onClick="shareText"
        android:layout_height="wrap_content"
        android:text="share text" />
</LinearLayout>